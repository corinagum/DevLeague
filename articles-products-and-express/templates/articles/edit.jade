extends ./../layout

block content
  form(name="edit-articles", method="POST", action="/articles/#{articles.title}")
    input(type="hidden", name="_method", value="PUT")
    div.title Title:&nbsp
      input(type="text", name="title", value="#{articles.title}")
    div.author Author:&nbsp
      input(type="text", name="author", value="#{articles.author}")
    div.urlTitle URL Title:&nbsp
      input(type="text", name="urlTitle" value="#{articles.urlTitle}")
    div.submit
      input(type="submit", value="submit")
