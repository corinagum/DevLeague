extends ./../layout
block content
  #new-post
    a(href="/gallery/new")
      p New Post
  div
    a(href="/login")
      p Login
    a(href="/users")
      p Sign Up
  .main
    each photo in Photos
      .thumbnail
        a(href="/gallery/#{photo.id}")
          img.portrait(src="#{photo.link}")
      ul
        li #{photo.author}&nbsp;- #{photo.link}
    #footer
      p &nbsp;




