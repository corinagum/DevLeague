extends ./layout

block content
  h3 Create New User
  form#newUser(method="POST" action="/users")
    p User:
      input(type="text" name="username", placeholder="New Username" autofocus)
    p Email:
      input(type="text" name="email_address")
    p Password:
      input(type="password" name="password")
      input(type="password" name="verifyPassword")
    button(type="submit") Create
